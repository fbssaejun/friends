
<% if user_signed_in? %>

<h1>Friends</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User Id</th>
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
      <tr>
        <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary"%>

<% else %>

  <div class="card text-center">
    <div class="card-header">
      <h1>Friends Book</h1>
    </div>
    <div class="card-body">
      <h5 class="card-title">Welcome!</h5>
      <p class="card-text"><i><u>Add</u></i> friends</p>
      <p class="card-text"><i><u>View</u></i> friends</p>
      <p class="card-text"><i><u>Edit</u></i> friends</p>
      <p class="card-text"><i><u>Delete</u></i> friends</p>

      <%= link_to 'Friends', friends_path, class:"btn btn-primary" %>
  </div>

</div>

<% end %>

